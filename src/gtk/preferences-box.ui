<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.10.3 -->
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.1"/>
  <template class="PreferencesBox" parent="GtkBox">
    <property name="margin-end">10</property>
    <property name="margin-start">10</property>
    <property name="margin-top">10</property>
    <property name="orientation">vertical</property>
    <property name="spacing">10</property>
    <property name="width-request">200</property>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes" context="monitorets">Theme</property>
        <child>
          <object class="GtkBox">
            <property name="css-classes">linked
</property>
            <property name="homogeneous">True</property>
            <child>
              <object class="GtkToggleButton" id="_system_theme_toggle_button">
                <property name="label" translatable="yes" context="monitorets">System</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_light_theme_toggle_button">
                <property name="group">_system_theme_toggle_button</property>
                <property name="label" translatable="yes" context="monitorets">Light</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_dark_theme_toggle_button">
                <property name="group">_system_theme_toggle_button</property>
                <property name="label" translatable="yes" context="monitorets">Dark</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes" context="monitorets">Layout</property>
        <child>
          <object class="GtkBox">
            <property name="css-classes">linked
</property>
            <property name="homogeneous">True</property>
            <child>
              <object class="GtkToggleButton" id="_adaptive_layout_toggle_button">
                <property name="child">
                  <object class="AdwButtonContent">
                    <property name="icon-name">rotation-allowed-symbolic</property>
                    <property name="label" translatable="yes" context="monitorets">Adaptive</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_horizontal_layout_toggle_button">
                <property name="child">
                  <object class="AdwButtonContent">
                    <property name="icon-name">object-flip-horizontal-symbolic</property>
                    <property name="label" translatable="yes" context="monitorets">Horizontal</property>
                  </object>
                </property>
                <property name="group">_adaptive_layout_toggle_button</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_vertical_layout_toggle_button">
                <property name="child">
                  <object class="AdwButtonContent">
                    <property name="icon-name">object-flip-vertical-symbolic</property>
                    <property name="label" translatable="yes" context="monitorets">Vertical</property>
                  </object>
                </property>
                <property name="group">_adaptive_layout_toggle_button</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="_monitor_enable_preferences_group">
        <property name="description" translatable="yes" context="monitorets">Select which monitor(s) to enable </property>
        <property name="title" translatable="yes" context="monitorets">Monitors</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="css-classes">flat</property>
        <property name="halign">end</property>
        <property name="homogeneous">True</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkButton" id="_tips_button">
            <property name="action-name">app.tips</property>
            <property name="css-classes">circular</property>
            <property name="has-frame">False</property>
            <property name="icon-name">dialog-information-symbolic</property>
            <property name="tooltip-text">Hints and tips</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="_about_button">
            <property name="action-name">app.about</property>
            <property name="css-classes">circular</property>
            <property name="halign">end</property>
            <property name="has-frame">False</property>
            <property name="icon-name">help-about-symbolic</property>
            <property name="tooltip-text">About this application</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
