<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.10.3 -->
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.1"/>
  <template class="PreferencesBox" parent="GtkBox">
    <property name="margin-end">10</property>
    <property name="margin-start">10</property>
    <property name="margin-top">10</property>
    <property name="orientation">vertical</property>
    <property name="spacing">10</property>
    <property name="width-request">200</property>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">Theme</property>
        <child>
          <object class="GtkBox">
            <property name="css-classes">linked
</property>
            <property name="homogeneous">True</property>
            <child>
              <object class="GtkToggleButton" id="_system_theme_toggle_button">
                <property name="label">System</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_light_theme_toggle_button">
                <property name="group">_system_theme_toggle_button</property>
                <property name="label">Light</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="_dark_theme_toggle_button">
                <property name="group">_system_theme_toggle_button</property>
                <property name="label">Dark</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="_monitor_enable_preferences_group">
        <property name="description">Select which monitor(s) to enable </property>
        <property name="title">Monitors</property>
        <child>
          <object class="AdwActionRow" id="_cpu_monitor_enable_action_row">
            <property name="title">CPU</property>
          </object>
        </child>
        <child>
          <object class="AdwActionRow" id="_gpu_monitor_enable_action_row">
            <property name="title">GPU (experimental)</property>
          </object>
        </child>
        <child>
          <object class="AdwActionRow" id="_memory_monitor_enable_action_row">
            <property name="title">Memory</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="_about_button">
        <property name="action-name">app.about</property>
        <property name="halign">end</property>
        <property name="has-frame">False</property>
        <property name="icon-name">help-about-symbolic</property>
      </object>
    </child>
  </template>
</interface>
