<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.jorchube.monitorets</id>
  <name>Monitorets</name>
  <summary>Have always at a glance the usage of system resources</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <developer_name>Jordi Chulia</developer_name>
  <url type="homepage">https://github.com/jorchube/monitorets/</url>
  <url type="bugtracker">https://github.com/jorchube/monitorets/issues</url>

  <content_rating type="oars-1.1" />

  <description>
    <p>Have always at a glance the usage of system resources</p>

    <p>Monitorets is a small utility application offering a simple and quick view at the usage of several of your computer resources. Almost like an applet or a widget for your desktop.</p>

    <p>Available monitors:</p>
     <ul>
      <li>Cpu</li>
      <li>Gpu (experimental support)</li>
      <li>Memory</li>
      <li>Network downlink traffic</li>
      <li>Network uplink traffic</li>
      <li>Home folder space</li>
      <li>Root space</li>
      <li>Temperature sensors</li>
    </ul>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/jorchube/monitorets/master/imgs/light_window.png</image>
      <caption>Have always at a glance useful system information</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/jorchube/monitorets/master/imgs/themeable.png</image>
      <caption>Choose between light and dark theme</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/jorchube/monitorets/master/imgs/adaptable.png</image>
      <caption>Monitorets lets you choose the layout you prefer to view your system resources</caption>
    </screenshot>
  </screenshots>

  <launchable type="desktop-id">io.github.jorchube.monitorets.desktop</launchable>

  <provides>
    <binary>monitorets</binary>
  </provides>

  <releases>
    <release version="0.5.0" date="2022-11-20">
      <description>
        <ul>
          <li>Autodiscover temperature sensors and expose them as temperature monitors</li>
          <li>Ellipsize monitor names when do not fit the available space</li>
          <li>Add monitor groups for same-kind monitors in the preferences popover</li>
        </ul>
      </description>
    </release>
    <release version="0.4.0" date="2022-11-17">
      <description>
        <ul>
          <li>Added network downlink and uplink traffic monitors</li>
          <li>Some cosmetic changes have been done</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2022-11-06">
      <description>
        <ul>
          <li>Added home and root folder usage monitors</li>
          <li>Added layout selector</li>
          <li>Added Tips section</li>
          <li>Improve close and preferences buttons visibility when shown</li>
        </ul>
      </description>
    </release>
    <release version="0.2.1" date="2022-11-02">
      <description>
        <p>Under the hood tweaks</p>
      </description>
    </release>
    <release version="0.2.0" date="2022-11-01">
      <description>
        <p>Aesthetic:</p>
        <p>  - Reworked graph drawing</p>
        <p>Internal:</p>
        <p>  - Decoupled several events that can trigger a graph redraw</p>
      </description>
    </release>
    <release version="0.1.0" date="2022-10-31">
      <description>
        <p>First release</p>
      </description>
    </release>
  </releases>

</component>
